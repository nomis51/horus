@inherits MainLayoutBase

<MudThemeProvider Theme="@ThemeService?.Theme"
                  IsDarkMode="@true"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudStack Row="true"
          Spacing="2"
          Justify="Justify.SpaceBetween"
          Style="padding: .5rem">
    <MudPaper Style="width: var(--app-sidenav-width); height: var(--app-content-height)">
        <Sidenav/>
    </MudPaper>
    <MudPaper Style="width: var(--app-content-width); height: var(--app-content-height)">
        @Body
    </MudPaper>
</MudStack>
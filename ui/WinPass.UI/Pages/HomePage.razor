@inherits HomePageBase
@page "/"

<MudStack Row="true"
          Spacing="2"
          Justify="Justify.SpaceBetween"
          Style="padding: 0 .5rem .5rem .5rem">
    <MudPaper Style="width: var(--app-sidenav-width); height: var(--app-content-height); padding: 1rem">
        <Sidenav OnEntrySelected="@SelectEntry"/>
    </MudPaper>
    <MudPaper Style="width: var(--app-content-width); height: var(--app-content-height); padding: 1rem">
        <EntryForm SelectedEntry="@SelectedEntry"/>
    </MudPaper>
</MudStack>
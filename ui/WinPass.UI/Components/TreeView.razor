@inherits TreeViewBase<T>
@typeparam T where T : class

@foreach (var item in Items)
{
    if (IsBranch.Invoke(item))
    {
        <MudTreeViewItem T="string"
                         Icon="@Icons.Material.Filled.Folder"
                         Text="@GetText.Invoke(item)">
            <TreeView T="T"
                      IsBranch="@IsBranch"
                      GetChildItems="@GetChildItems"
                      Items="@GetChildItems(item)"
                      GetText="@GetText"
                      BasePath="@GetPath(item)"/>
        </MudTreeViewItem>
    }
    else
    {
        <MudTreeViewItem T="string"
                         Icon="@Icons.Material.Filled.Key"
                         Value="@GetPath(item)"
                         Text="@GetText.Invoke(item)"/>
    }
}
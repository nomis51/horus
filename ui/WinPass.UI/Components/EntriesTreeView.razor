@inherits EntriesTreeViewBase

@foreach (var item in Items)
{
    if (item.IsFolder)
    {
        <MudTreeViewItem T="string"
                         Icon="@Icons.Material.Filled.Folder"
                         Text="@item.Name"
                         Style="overflow-y: hidden">
            <EntriesTreeView Items="@item.Entries"
                             OnDeleteClick="@OnDeleteClick"
                             OnDuplicateClick="@OnDuplicateClick"
                             BasePath="@GetPath(item)"/>
        </MudTreeViewItem>
    }
    else
    {
        <MudTreeViewItem T="string"
                         Value="@GetPath(item)"
                         Icon="@Icons.Material.Filled.Key">
            <BodyContent>
                <MudStack Row="true"
                          Style="width: 100%"
                          Justify="Justify.SpaceBetween">
                    <MudText Style="width: 100%; height: 40px; line-height: 40px"
                             Align="Align.Start">
                        @item.Name
                    </MudText>
                    <MudStack Row="true"
                              AlignItems="AlignItems.Center">
                        <MudTooltip Placement="Placement.Top"
                                    Arrow="true"
                                    Text="Duplicate entry">
                            <MudIconButton Icon="@Icons.Material.Filled.Difference"
                                           OnClick="@(() => OnDuplicateClick.InvokeAsync(GetPath(item)))"
                                           Size="Size.Small"
                                           Color="Color.Inherit"/>
                        </MudTooltip>
                        <MudTooltip Placement="Placement.Top"
                                    Arrow="true"
                                    Text="Remove entry">
                            <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                           OnClick="@(() => OnDeleteClick.InvokeAsync(GetPath(item)))"
                                           Size="Size.Small"
                                           Color="Color.Inherit"/>
                        </MudTooltip>
                    </MudStack>
                </MudStack>
            </BodyContent>
        </MudTreeViewItem>
    }
}
<Window x:Class="WinPass.UI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinPass.UI"
        xmlns:wpf="http://schemas.microsoft.com/winfx/2006/xaml/presentation/blazor"
        mc:Ignorable="d"
        Title="WinPass.UI"
        Height="900"
        Width="1600"
        WindowStartupLocation="CenterScreen" Loaded="MainWindow_OnLoaded">
    <Grid>
        <wpf:BlazorWebView x:Name="WebView"
                           HostPage="wwwroot\index.html"
                           Services="{DynamicResource services}">
            <wpf:BlazorWebView.RootComponents>
                <wpf:RootComponent Selector="#app"
                                   ComponentType="{x:Type local:AppUi}" />
            </wpf:BlazorWebView.RootComponents>
        </wpf:BlazorWebView>
    </Grid>
</Window>